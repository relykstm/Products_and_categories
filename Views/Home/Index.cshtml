@using Products_and_Catagories.Models
@model Product

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Products | <a href="categories">Categories</a></h1>
    <div>
        <h2>New Product</h2>
        <form  asp-controller="Home" asp-action="NewProduct" method="POST">
            <span asp-validation-for="Name"></span>
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name">
            <br>
            <span asp-validation-for="Description"></span>
            <label asp-for="Description"></label>
            <input type="text" asp-for="Description">
            <br>
            <span asp-validation-for="Price"></span>
            <label asp-for="Price"></label>
            <input type="text" asp-for="Price">
            <br>
            <input type="submit" value="Create">
        </form>
    </div>
    <hr>
    <div>
        <h2>Existing Products:</h2>
        <ul>
            @foreach(var product in ViewBag.AllProducts)
            {
                <li><a href="/product/@product.ProductId">@product.Name</a></li>
            }
        </ul>
    </div>
</body>
</html>